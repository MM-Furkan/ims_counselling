    public class JSON2ApexLead {
        
        
        public String EmailId;
    } 
    public static JSON2ApexLead parse(String json) {
        return (JSON2ApexLead) System.JSON.deserialize(json, JSON2ApexLead.class);
    }
    
    
    
}