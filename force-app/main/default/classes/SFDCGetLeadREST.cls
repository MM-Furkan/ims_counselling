@RestResource(urlMapping='/getSFDCLead/*')
global class SFDCGetLeadREST {
    @HttpGet
    global static void doGet() {  
        
        RestRequest request = RestContext.request;  
        
        RestResponse response = RestContext.response;  
        
        String email = RestContext.request.params.get('email');
        System.debug('email: '+ email);
        List<Account> acc = [SELECT Id, Name,PersonEmail,PersonMobilePhone
                             
                             FROM Account WHERE PersonEmail=:email];
        IF(acc.size()>0){
            String resp = JSON.serialize(acc[0]);
            response.responseBody = Blob.valueOf(resp);
            response.addHeader('Content-Type', 'application/json');
            
            response.statusCode = 200;
            
        }else{
            System.debug('Account not found for the given email');
            String resp = '{"Status":"False","Message":"Account Not Found"}';
            response.responseBody = Blob.valueOf(resp);
            response.addHeader('Content-Type', 'application/json');
            
            response.statusCode = 200;
            
        }
        
        
        
    }  
    
